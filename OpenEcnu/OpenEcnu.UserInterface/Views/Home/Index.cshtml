@{
    Layout = null;
    string userName = ViewBag.UserName;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>华东师范大学开放平台 - 首页</title>
    <link href="~/Bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript" src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script type="text/javascript" src="~/Bootstrap/js/bootstrap.min.js"></script>
</head>
<body>
    <!--Header Begin-->
    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="sr-only">Toggle Navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">开放平台</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="active">@Html.ActionLink("首页", "Index","Home")</li>
                    <li>@Html.ActionLink("API文档", "Index", "ApiList")</li>
                    <li>@Html.ActionLink("应用管理", "Index", "App")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (ViewBag.UserName == null || string.IsNullOrEmpty(ViewBag.UserName))
                    {
                        <li>@Html.ActionLink("登录", "Login", "Account")</li>
                    }
                    else
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">欢迎，@userName<b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("注销", "Logout", "Account")</li>
                            </ul>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!--Header End-->
    <!--Body Begin-->
    <div class="jumbotron">
        <div class="container">
            <h1 style="font-family: 微软雅黑;">欢迎进入华东师范大学开放平台</h1>
            <p>在这里你可以申请你的应用，并使用OAuth协议让你的应用和华东师范大学公共数据库进行无缝连接和交互。</p>
            <p><a class="btn btn-primary btn-lg" role="button">什么是OAuth协议？</a></p>
        </div>
    </div>
    <!--Body End-->
    <script type="text/javascript">
    </script>
</body>
</html>

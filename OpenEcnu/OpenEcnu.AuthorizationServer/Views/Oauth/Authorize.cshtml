@model OpenEcnu.AuthorizationServer.Models.UserAppModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>请求授权</title>
    <link rel="stylesheet" href="~/bootstrap/css/bootstrap.min.css" />
    <script src="~/Scripts/jquery-2.1.0.min.js"></script>
    <script src="~/bootstrap/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/bootstrap/css/signin.css" />
</head>
    <body>
        <div class="container">
            <div class="row" style="margin-top: 50px">
                <div class="col-md-2"></div>
                <div class="col-md-8">
                    @using (Html.BeginForm())
                    {
                        <div class="panel panel-info">
                            <div class="panel-heading">请求授权<div class="navbar-right">@Model.UserName | @Html.ActionLink("换个帐号？","Login")</div></div>
                            <div class="panel-body">使用公共数据库账号登录 @Model.AppName，将允许其使用你的个人信息。</div>
                            <div class="panel-footer">
                                <input type="submit" id="btnConfirm" class="btn btn-primary" value="确认授权" />
                                <input type="button" id="btnCancel" class="btn" value="取消" />
                            </div>
                        </div>
                    }
                </div>
                <div class="col-md-2"></div>
            </div>
        </div>
        <script type="text/javascript">
            $("#btnCancel").click(function() {
                history.back();
            });
        </script>
    </body>
</html>
